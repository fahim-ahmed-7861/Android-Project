<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bookframe3"
    tools:context=".singinorsingup">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="580dp" >


        <TextView
            android:id="@+id/text"
            android:text="Read It"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textStyle="bold"

           android:layout_marginTop="75dp"
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/textquotes"
            android:text="@string/quotes"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"

            android:layout_marginTop="75dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textwritter"
            android:text="@string/writtername"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>




   <LinearLayout
       android:weightSum="2"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="65dp">


       <Button
           android:id="@+id/signup"
           android:layout_weight="1"
           android:backgroundTint="#2E8B57"
           android:text="SIGN IN"
           android:textStyle="italic"
           android:textColor="#FFFFFF"
         android:layout_width="0dp"
           android:textSize="20dp"
           android:layout_height="80dp" />



       <Button
           android:layout_width="0dp"
           android:layout_weight="1"
           android:backgroundTint="#9ACD32"
           android:text="SIGN UP"
           android:textSize="20dp"
           android:textStyle="italic"
           android:textColor="#FFFFFF"
           android:layout_height="80dp" />




   </LinearLayout>

</LinearLayout>